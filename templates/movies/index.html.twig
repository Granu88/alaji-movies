{% extends 'base.html.twig' %}

{% block title %}AlloCiné{% endblock %}

{% block stylesheets %}
<style>
  a {color: white;}

  .movieDescription{
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
        }
  h1 {
    color: orange;
  }
</style>
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container text-center">
  <h1>AlloCiné</h1>
</div>


<div class="container">
    <div class="row text-center">
      {% for movie in movies %}
        <div class="col-md-4 d-flex align-items-stretch">
          <div class="card text-white bg-secondary mb-3" style="width: 30rem;">
            <div class=" mt-3 card-body text-center">
              {% if movie.cover %}
                <img src="{{ movie.cover }}">
              {% endif %}
            </div>
            <div class="card-body movieDescription">
              {{ movie.description }}
            </div>
            <ul class="list-group list-group-flush mt-3">
              <li class="list-group-item"><button class="btn btn-warning"><a href="title" class="card-link">{{ movie.name}}</a></li>
              <li class="list-group-item"><button class="btn btn-primary"><a href="author" class="card-link">{{ movie.author.name}}</a></li>
              <li class="list-group-item"><button class="btn btn-secondary"><a href="author" class="card-link">{% for category in movie.category %} {{ category.name }} {% endfor %}</a></li>
              <li class="list-group-item">{{ movie.date.format('d/m/Y') }}</li>
              <li class="list-group-item">{{ movie.reviews }} <i class="fas fa-star"></i></li>
            </ul>
          </div>
        </div>
      {% endfor %}
    </div>
</div>
{% endblock %}
